<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Default" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Woelflinge" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryWoelflinge</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWoelflinge</item>
        <item name="colorAccent">@color/colorAccentWoelflinge</item>
    </style>

    <style name="AppTheme.Jungpfadfinder" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryJungpfadfinder</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkJungpfadfinder</item>
        <item name="colorAccent">@color/colorAccentJungpfadfinder</item>
    </style>

    <style name="AppTheme.Pfadfinder" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryPfadfinder</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPfadfinder</item>
        <item name="colorAccent">@color/colorAccentPfadfinder</item>
    </style>

    <style name="AppTheme.Rover" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryRover</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRover</item>
        <item name="colorAccent">@color/colorAccentRover</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
